package priori;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.HashMap;
import java.util.Scanner;
import java.util.regex.Pattern;

public class Items {
	private HashMap<String,Boolean> itemMap;
	
	public Items(String ItemsFile) {
		itemMap = new HashMap<String, Boolean>();
		try {
			Scanner items = new Scanner(new File(ItemsFile));
			Pattern tokenPattern = Pattern.compile("[!,]+");
			while(items.hasNext(tokenPattern)) {
				itemMap.put(items.next(tokenPattern), true);
			}
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
	}
	
	public boolean checkExistence(String testee) {itemMap.ge
		// use testee as hash key, and then check if the exist in the itemMap
		if(itemMap.get(testee) != null) {
			return true;
		} else {
			return false;
		}
	}
}
